            button(data-mode='table')
                i.mode-icon.mode-icon-image(class=mode=='table' ? 'active' : '') Table
        if groupedBarEnabled
            button(data-mode='grouped-bar')
                i.mode-icon.mode-icon-bar(class=mode=='grouped-bar' ? 'active' : '') Bar
        if gaugeEnabled
            button(data-mode='gauge')
                i.mode-icon.mode-icon-gauge(class=mode=='gauge' ? 'active' : '') Gauge
        if areaEnabled
            button(data-mode='area')
                i.mode-icon.mode-icon-area(class=mode=='area' ? 'active' : '') Area
        if pieEnabled
            button(data-mode='pie')
