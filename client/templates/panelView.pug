        if barEnabled
            button(data-mode='bar')
                i.mode-icon.mode-icon-bar(class=mode=='bar' ? 'active' : '') Bar
        if jsonEnabled
            button(data-mode='json')
                i.mode-icon.mode-icon-json(class=mode=='json' ? 'active' : '') JSON
        if imageEnabled
            button(data-mode='image')
                i.mode-icon.mode-icon-image(class=mode=='image' ? 'active' : '') Image
